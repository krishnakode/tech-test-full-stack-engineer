{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "types": []
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./node_modules/**/*",
  ],
  "typeRoots": ["./node_modules/@types"]
}